= form_tag '', :class => 'agree-or-disagree-form', :method => 'post' do
  = text_field_tag :skipped, :value => false, :class => 'skipped', :style => 'display: none;'
  .header
    %hgroup.title
      %h1 NTU Voting
      %h2 ○: 同意，✕: 不同意，-: 沒意見。
    .actions.two-actions
      %button.button.skip 不領票 Skip
      = submit_tag "送出選票 Submit", :class => "action button"
  #main.main
    .votes
      - 20.times do |i|
        .vote
          .candidate
            .id= i+1
            .choices
              %label.agree= radio_button_tag "opinion_to_#{i+1}", :class => 'agree', :value => 1
              %label.none= radio_button_tag "opinion_to_#{i+1}", :class => 'none', :value => 0, :checked => :checked
              %label.disagree= radio_button_tag "opinion_to_#{i+1}", :class => 'disagree', :value => -1
            .pic
              .img{:style => "background-image: url(#{lorem.image((Random.rand(200)+200).to_s + 'x' + (Random.rand(200)+200).to_s, :random_color => true)})"}
            .name= fake_name
