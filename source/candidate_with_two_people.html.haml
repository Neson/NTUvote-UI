= form_tag '', :class => 'single-selection-form', :method => 'post' do
  = text_field_tag :skipped, :value => false, :class => 'skipped', :style => 'display: none;'
  .header
    %hgroup.title
      %h1 NTU Voting
      %h2 點選你想要投給誰
    .actions.two-actions
      %button.button.skip 不領票 Skip
      = submit_tag "送出選票 Submit", :class => "action button"
    = text_field_tag :selection, :id => :selection, :type => :hidden
  #main.main
    .votes
      .vote
        - 10.times do |i|
          .candidate.selection.big
            .id= i+1
            .elect
            .pic
              .img{:style => "background-image: url(#{lorem.image((Random.rand(200)+200).to_s + 'x' + (Random.rand(200)+200).to_s, :random_color => true)})"}
              .img{:style => "background-image: url(#{lorem.image((Random.rand(200)+200).to_s + 'x' + (Random.rand(200)+200).to_s, :random_color => true)})"}
            .name
              %div= fake_name
              %div= fake_name
